<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        class="com.example.efricano.myapplication.CountryFragment"
        android:name="CountryFragment"
        android:id="@+id/countryfrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <fragment
        class="com.example.efricano.myapplication.CityFragment"
        android:name="CityFragment"
        android:id="@+id/cityfrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
</LinearLayout>